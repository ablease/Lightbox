<div class="page-header" id="top">
	<h1 id="chatNavTitle"><a href='/'>Lightbox</a></h1>
  <h5><center>
  		<%= @name.first.capitalize %> <span>group</span>
  </center></h5>
</div>

<div id="chat-text">
</div>

<form id="input-form" class="form-inline">

  <div class="form-group">
    <input id="input-handle-email" type="hidden" class="form-control" value="<%=@current_user.email%>" autofocus />
  </div>

  <div class="form-group" id="chatInputForm">
    <input id="input-handle" type="hidden" class="form-control" placeholder="<%=@current_user.name %>" value="<%=@current_user.name%>:" autofocus />
  </div>

  <div class="form-group" id="chatInputForm">
    <input id="input-text" type="text" class="form-control" placeholder="Enter chat text here!" autofocus />

    <button id="submit-button" class="btn btn-primary" type="submit">Send</button>
  </div>

</form>

<script type="text/javascript", src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript", src="assets/js/application.js"></script>
