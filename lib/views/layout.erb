  <body>

    <% if current_user %>
      <header>
        <div class="frame">
          <div class="contents">
            <nav class='navBar'>

              <ul id="navList">
                <li class="navigation" id='home_text'>
                  <h1><a id="navHome" href='/'>Home</a></h1>
                </li>

                <li class="navigation" id='home'>
                  <h1><a id="navTitle" href='/'>Lightbox</a></h1>
                </li>

                <li class="navigation" id='logOut'>
